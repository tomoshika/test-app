<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td>"Destroy"</td>
      <% end %>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<form class="new_book">
  <%= form_with model:@book, local:true do |f| %>
   <div class="field">
     <label for="book_title">Title</label></br>
     <%= f.text_field :title %>
   </div>
   <div class="field">
     <label for="book_body">Body</label></br>
     <%= f.text_area :body %>
   </div>
   <div class="action">
     <%= f.submit "Create Book" %>
   </div>
  <% end %>
</form>